<h1>Settings</h1>
<%= link_to "Log out", sessions_path, :method => :delete, :class => 'nav-link' %>
<%= form_for :user, url: user_path, method: :patch do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br />
<%= f.label :email %>
<%= f.email_field :email %><br />
<%= f.label :phone %>
<%= f.telephone_field :phone %><br />
<%= f.label :preference %>
<%= f.text_field :preference %><br />
<%= f.label :password %>
<%= f.password_field :password %><br />
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %><br />
<%= f.submit 'Update settings' %>
<% end %>
