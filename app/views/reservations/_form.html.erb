<%= form_for :reservation, url: restaurant_reservations_path(params[:id]) do |f| %>

<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control', :value => (current_user.name if current_user)%>
</div>
<div class="form-group">
  <%= f.label "Date" %>
  <%= f.date_field :date, class: 'form-control'  %>
</div>
<div class="form-group">
  <%= f.label :time %>
  <%= f.time_select :time, class: 'form-control', minute_step: 15  %>
</div>
<div class="form-group">
  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control', :value => (current_user.email if current_user) %>
</div>
<div class="form-group">
  <%= f.label :notes %>
  <%= f.text_field :notes, class: 'form-control'  %>
</div>
<div class="form-group">
  <%= f.submit 'Make Reservation', :class => 'btn btn-primary' %>

</div>
<% end %>
