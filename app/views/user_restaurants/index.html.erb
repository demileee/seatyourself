<h2>All my restaurants</h2>
<% if current_user &&  current_user.role == 'owner'%>
  <%= link_to "Create Restaurant", new_restaurant_path%>
<% end %>
<ul style="list-style: none;">
<% @restaurants.each do |restaurant| %>
  <li>
    <h2><%= restaurant.name %></h2>
    <%= link_to 'Edit', edit_restaurant_path(restaurant.id) %>
    <%= link_to "Delete", restaurant_path(restaurant.id), method: :delete, data: {confirm: "Are you sure you want to delete this restaurant?"} %>
    <p><%= restaurant.address %></p>
    <p><%= restaurant.description %></p>
    <% restaurant.reservations.each do |reservation| %>
    <p><%= dateformat(reservation.date_time) %> | <%= reservation.name %></p>

    <% end %>
    </p>


  </li>
<% end %>
</ul>
